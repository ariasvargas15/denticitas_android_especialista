<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fecha_cita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="Jue\n1 NOV"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/linear_cita"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card_cita"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/servicio_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exodoncia"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/hora_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="11:00 AM"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/especialista_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Esp. Diana Romero"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

    </LinearLayout>




</LinearLayout>